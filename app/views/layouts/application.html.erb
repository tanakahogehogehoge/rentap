<!DOCTYPE html>
<html>
<head>
  <title>レンタップ</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
<div class="container">
  <nav class="navbar navbar-inverse">
    <div class ="container-fluid">
      <div class="navbar-header">
        <a href="#" class="navbar-brand">レンタップ</a>
      </div>
      <% if user_signed_in? %>
        <ul class ="nav navbar-nav">
          <li class = "active">
            <a href ="/myps"><span class="glyphicon glyphicon-home"></span>ホーム</a>
          </li>
          <li><a href ="/insts"><span class="glyphicon glyphicon-search"></span>検索</a></li>
          <li><a href ="/destroy_user_session"><span class="glyphicon glyphicon-log-out"></span>ログアウト</a></li>
        </ul>
      <% else %>
        <ul class ="nav navbar-nav">
          <li><a href ="new_user_registration_path"><span class="glyphicon glyphicon-upload"></span>サインアウト</a></li>
          <li><a href ="new_user_session_path"><span class="glyphicon glyphicon-log-in"></span>ログイン</a></li>
        </ul>
      <% end %>
      </div>
    </nav>
  </div>
</header>

<%= yield %>

</body>
</html>
