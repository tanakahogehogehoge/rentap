<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10, bw">
    <h2>コメントを編集する</h2>
    <p id="notice"></p>

    <%= form_for(@comment, url:inst_comment_path) do |f| %>
      <%= f.label :content %>
      <%= f.text_field :content, class:'form-control' %>
      <br>
      <%= f.submit '編集する', class: 'btn btn-primary btn-sm' %>
      <%= link_to "物件情報に戻る", inst_path(@comment.inst.id), class: 'btn btn-primary btn-sm' %>
    <% end %>
  </div>
</div>
