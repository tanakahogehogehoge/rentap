<ul>
  <% comments.each do |comment| %>
    <% unless comment.id.nil? %>
      <li>
        <% if comment.user.id == inst.user_id %>
          <p class="left"><font color="blue">オーナーさんが回答しました</font></p>
          <p class="left"><font color="blue"><%= comment.content %></font></p>
        <% else %>
          <p class="left"><font color="red">ユーザ番号：<%= comment.user.id %>さんが質問しました</font></p>
          <p class="left"><font color="red"><%= comment.content %></font></p>
        <% end %>

        <% if current_user.id == comment.user.id %>
          <p class="right">
            <%= link_to '', edit_inst_comment_path(inst, comment), class: "fa fa-pencil-square-o fa-lg" %>
            <%= link_to '', inst_comment_path(inst, comment), class: "fa fa-trash-o fa-lg", method: :delete, remote: true, data: { confirm: '本当に削除していいですか？' } %>
          </p>
        <% end %>
     </li>
    <% end %>
  <% end %>
</ul>
