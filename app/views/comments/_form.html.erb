<%= form_for([inst, comment], remote: true) do |f| %>
  <%= f.hidden_field :inst_id %>
  <div class="field">
    <%= f.text_field :content, placeholder: "内容", class: "form-control"  %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit"コメント登録", class: "btn btn-primary btn-sm" %>
  </div>
<% end %>
