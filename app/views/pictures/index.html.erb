<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <p><%= notice %></p>
    <br>
    
    <h1><strong>画像一覧</strong></h1>
    <%= link_to "一覧へ",  insts_path,  class: 'btn btn-default btn-sm btn-info'%>

    <% @pictures.each do |picture| %>
      <p><h3><%=picture.title%></h3></p>
      <br>
      <p><%= image_tag(picture.image) %></p>
      <br>
      <%= link_to "画像を編集する", edit_picture_path(picture.id), class: 'btn btn-default btn-sm btn-primary' %>
      <%= link_to '画像を削除する', picture_path(picture.id),  method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
    
    <% end %>
  </div>
</div>


